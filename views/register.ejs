<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
<div class="w-[26vw] bg-white px-[50px] py-10 rounded-[30px] ">
  <h1 class="text-2xl text-center font-semibold tracking-tighter text-zinc-700 capitalize leading-none">Create new Account</h1>
  <form action="/register" method="post">
    <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
    <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Fullname">
    <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
    <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
    <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="password" name="password" placeholder="password">
    <input class="block border-2 rounded-full mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create Account" name="" id="">
    <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service, and acknowledge you've read our Privacy Policy. Notice at collection.</p>
  </form>
  <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
</div>
</div>
<% include ./partials/footer.ejs %>